<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/CSS/layout.css" rel="stylesheet" />
    <link href="~/CSS/hover-min.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css?family=Francois+One" rel="stylesheet">
</head>
<body>
    <div class="banner">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="logo_div">
                        @Html.ActionLink("Cook It!", "Index", "recipes", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    
                        
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Recipes", "Index", "recipes")</li>
                        <li>@Html.ActionLink("Favourite List", "Favourite_list", "recipes")</li>
                        <li>@Html.ActionLink("Grocery List", "GrocerySave", "recipes")</li>
                        <li>@Html.ActionLink("About Cook It", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>


        <div class="container inner_banner text-center">
            <h1 class="banner-text">
                Your Ultimate Myanmar Recipe Guide!
            </h1>
            <h4 class="banner-text-slogan">Have a taste of the Myanmar Traditional Foods Here</h4>
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cook It! Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
